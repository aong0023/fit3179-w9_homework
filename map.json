{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "Australia_slopes_by_beach.topojson",
        "format": {"type": "topojson"}
      },
      "mark": {"type": "geoshape", "stroke": "blue", "strokeWidth": 1,"fill":null},
      "encoding": {
        "color": {
          "field": "beach_slope_average",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "title": "Average Beach Slope"
        },
        "tooltip": [
          {"field": "beach_id", "type": "nominal"},
          {"field": "beach_slope_average", "type": "quantitative"}
        ]
      }
    }
  ]
}

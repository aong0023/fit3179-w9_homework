{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "data": {
        "url": "ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {"type": "geoshape", "stroke": "black","fill":"lightgrey"}
    },
    {
      "data": {
        "url": "Australia_slopes_by_beach.geojson",
        "format": {"type": "geojson"}
      },
      "mark": {"type": "geoshape", "stroke": "blue", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "properties.beach_slope_average",
          "type": "quantitative",
          "scale": {"scheme": "orangered"},
          "title": "Average Beach Slope"
        },
        "tooltip": [
          {"field": "properties.beach_id", "type": "nominal"},
          {"field": "properties.beach_slope_average", "type": "quantitative"}
        ]
      }
    }
  ]
}
